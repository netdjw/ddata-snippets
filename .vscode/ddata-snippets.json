  "Ddata class property init code snippet": {
    "scope": "typescript",
    "prefix": "!init.field",
    "body": ["this.$field = !!data.$field ? data.$field : '$0';"]
  },

  "Ddata class data parameter init code snippet": {
    "scope": "typescript",
